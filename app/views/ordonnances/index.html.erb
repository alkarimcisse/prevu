<%= titre_page 'Liste des ordonnances' %>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="row">
            <div class="col-sm-12">
              <div class="actions_bouton">
                <%= link_to '<i class="fa fa-plus"></i> Ajouter'.html_safe, new_ordonnance_path, class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Prix total</th>
                  <th>Adherent</th>
                  <th>Pharmacy</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @ordonnances.each do |ordonnance| %>
                  <tr>
                    <td><%= ordonnance.prix_total %></td>
                    <td><%= ordonnance.adherent %></td>
                    <td><%= ordonnance.pharmacy %></td>
                    <td><%= link_to 'Show', ordonnance %></td>
                    <td><%= link_to 'Edit', edit_ordonnance_path(ordonnance) %></td>
                    <td><%= link_to 'Destroy', ordonnance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>

