<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-8">
    <h2>Invoice</h2>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInRight">
      <div class="ibox-content p-xl">
        <div class="row">
          <div class="col-sm-6">
          </div>

          <div class="col-sm-6 text-right">
            <p>
              <span><strong>Date ordonnance:</strong> <%= Time.now.strftime("%A, %d %b %Y %l:%M %p") %></span><br>
            </p>
          </div>
        </div>
        <div class="table-responsive m-t">
          <%= bootstrap_form_for(@ordonnance, :url => ordonnances_path) do |f| %>
            <table class="table invoice-table">
                <thead>
                <tr>
                  <th>Item List</th>
                  <th>Quantity</th>
                  <th>Unit Price</th>
                  <th>Total Price</th>
                </tr>
                </thead>
                <tbody>
                <% total = 0 %>
                <%= f.fields_for :detail_ordonnances do |detail| %>
                    <%= detail.hidden_field :medicament_id %>
                    <%= detail.hidden_field :quantite %>
                    <%= detail.hidden_field :prix_unitaire %>
                <% end %>

                <% @ordonnance.detail_ordonnances.each do |ligne| %>
                    <tr>
                      <td>
                        <div><strong><%= ligne.medicament.nom %></strong></div>
                      </td>
                      <td><%= ligne.quantite %></td>
                      <td><%= ligne.prix_unitaire %>F CFA</td>
                      <td><%= ligne.prix_unitaire*ligne.quantite %>F CFA</td>
                      <% total += ligne.prix_unitaire*ligne.quantite %>
                    </tr>
                <% end %>

                </tbody>
              </table>
        </div>

        <table class="table invoice-total">
          <tbody>
          <tr>
            <td><strong>TOTAL :</strong></td>
            <td><%= total %>F CFA</td>
          </tr>
          </tbody>
        </table>
        <div class="text-right">
          <%= f.hidden_field :adherent_id, value: @ordonnance.adherent_id %>
          <%= f.hidden_field :pharmacy_id, value: @ordonnance.pharmacy_id %>
          <%= f.hidden_field :prix_total, value: total %>
          <%= f.button 'Valider ordonnance', class: 'btn btn-primary' %>
          <%= link_to 'Annuler', params[:url_back], class: 'btn btn-white' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>