<%= titre_page "Ajout d'un contact" %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <%= bootstrap_form_for(@contact, url: create_contact_path(@owner.class, @owner.id, url_back: @url_back), layout: :horizontal) do |f| %>

              <%= f.text_field :titre, label: 'Poste' %>
              <%= f.text_field :prenom %>
              <%= f.text_field :nom %>
              <%= f.email_field :email %>
              <%= f.telephone_field :telephone %>
              <%= f.text_field :adresse %>

              <div class="form-group">
                <div class="col-sm-4 col-sm-offset-2">
                  <%= link_to 'Annuler', @url_back, class: 'btn btn-white' %>
                  <%= f.button 'Ajouter', class: 'btn btn-primary' %>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
