<%= titre_page 'Liste des consultations' %>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="row">
            <div class="col-sm-12">
              <div class="actions_bouton">
                <%= link_to '<i class="fa fa-plus"></i> Ajouter'.html_safe, new_consultation_path, class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Description</th>
                  <th>Montant</th>
                  <th>Type categorie medical</th>
                  <% unless params[:adherent_id] %>
                    <th>Adherent</th>
                  <% end %>
                  <th>Pharmacy</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @consultations.each do |consultation| %>
                  <tr>
                    <td><%= link_to "##{consultation.id}", consultation, class: 'ordLink' %></td>
                    <td><%= consultation.description %></td>
                    <td><%= consultation.montant %></td>
                    <td><%= consultation.type_acte_medical.nom %></td>
                    <% unless params[:adherent_id] %>
                        <td><%= consultation.adherent_id %></td>
                    <% end %>
                    <td><%= consultation.formation_sanitaire.title %></td>
                    <td><%= link_to 'Show', consultation %></td>
                    <td><%= link_to 'Edit', edit_consultation_path(consultation) %></td>
                    <td><%= link_to 'Destroy', consultation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>
<%= render 'adherents/modal' %>