<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="row">
            <div class="col-sm-12">
              <div class="actions_bouton">
                <%= link_to '<i class="fa fa-plus"></i> Ajouter'.html_safe, new_structure_aperitrice_path, class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Nom</th>
                  <th>Adresse</th>
                  <th>Date adhesion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @structure_aperitrices.each do |structure_aperitrice| %>
                  <tr>
                    <td><%= structure_aperitrice.nom %></td>
                    <td><%= structure_aperitrice.adresse %></td>
                    <td><%= structure_aperitrice.date_adhesion %></td>
                    <td><%= link_to 'Show', structure_aperitrice %></td>
                    <td><%= link_to 'Edit', edit_structure_aperitrice_path(structure_aperitrice) %></td>
                    <td><%= link_to 'Destroy', structure_aperitrice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>