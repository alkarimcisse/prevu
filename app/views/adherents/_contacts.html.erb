<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>Contacts</h5>
    <div class="ibox-tools">
      <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
      </a>
      <a class="close-link">
        <i class="fa fa-times"></i>
      </a>
    </div>
  </div>

  <div class="ibox-content">
    <div class="row">
      <% for contact in @adherent.contacts %>
          <%= render 'contacts/show_bloc', contact: contact %>
      <% end %>
    </div>
    <div class="text-right">
      <%= link_to '<strong>Ajouter un contact</strong>'.html_safe, new_contact_path(@adherent.class, @adherent.id, url_back: adherent_path(@adherent)), class: 'btn btn-sm btn-primary m-t-n-xs' %>
    </div>
  </div>
</div>