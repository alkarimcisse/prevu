<% if current_user.user_pharmacie? %>
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>Ordonnance</h5>
      </div>

      <div class="ibox-content">
        <div class="row">
          <% for ordonnance in @adherent.ordonnances %>
              <%= render 'ordonnances/show_bloc', ordonnance: ordonnance %>
          <% end %>
        </div>
        <div class="text-right">
          <%= link_to '<strong>Ajouter une ordonnance</strong>'.html_safe, new_adherent_ordonnance_path(@adherent), class: 'btn btn-sm btn-primary m-t-n-xs' %>
        </div>
      </div>
    </div>
<% end %>